{#                                                            <label for="radio3">★</label>#}
{#                                                            <input id="radio4" type="radio" name="stars_rating" value="2">#}
{#                                                            <label for="radio4">★</label>#}
{#                                                            <input id="radio5" type="radio" name="stars_rating" value="1">#}
{#                                                            <label for="radio5">★</label>#}
{#                                                        </p>#}
{#                                                    </div>#}
{#                                                </div>#}
{#                                            </div>#}
                                            <div class="row">
                                                {# Nombre #}
                                                <div class="col-md-12 input_container">
                                                    <input type="text" class="contact_input js-contact-name" placeholder="Seu nome*" required="required">
                                                </div>

                                                {# Email #}
                                                <div class="col-md-6 input_container">
                                                    <input type="text" class="contact_input js-contact-email" placeholder="Seu email*" required="required">
                                                </div>

                                                {# Telefone #}
                                                <div class="col-md-6 input_container">
                                                    <input type="text" class="contact_input js-input-number js-contact-phone" placeholder="Seu telefone">
                                                </div>
                                            </div>

                                            <div class="row">
                                                {# Texto #}
                                                <div class="col-md-12 input_container">
                                                    <textarea class="contact_input contact_textarea js-contact-text" placeholder="Mensagem*" required="required"></textarea>
                                                </div>
                                            </div>

                                            {# Boton Enviar #}
                                            <button class="contact_button js-contact-btn-send-email">Enviar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            {# Google Map #}
                            <div class="col-xl-5 col-lg-6 offset-xl-1">
                                <div class="contact_map">
                                    <div class="map">
                                        <div id="google_map" class="google_map">
                                            <div class="map_container">
                                                <div id="map"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                {# Footer #}
                {% include 'footer.twig' %}
            </div>

        {% endblock %}

        {% block footer_scripts %}
            {# Aquí van los scripts Js #}
            <script type="text/javascript" src="{{ general.full_assets_url }}js/user/contact.js"></script>
            <script type="text/javascript" src="{{ general.full_assets_url }}template/js/contact.js"></script>
        {% endblock %}