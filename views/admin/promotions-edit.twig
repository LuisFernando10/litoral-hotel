
    {% extends "base-document.twig" %}
    {% block content %}
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-md-2 col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h5 class="card-title">Editar Promoção</h5>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="{{general.full_web_url}}promocoes/"><button type="button" class="btn btn-info">Voltar</button></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body js-promotion-frm-edit">

                                {# Nome #}
                                <div class="form-row mt-3">
                                    <div class="offset-md-2 col-md-8">
                                        <div class="form-group bmd-form-group">
                                            <label>Nome</label>
                                            <input type="text" class="form-control js-promotion-name" value="{{ data_promotion_edit.nome }}">
                                        </div>
                                    </div>
                                </div>

                                {# Quartos-Preço #}
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-6">
                                        <label for="select-room">Quartos</label>
                                        <select class="form-control js-promotion-rooms" id="select-room">
                                            <option selected disabled class="">Selecionar</option>
                                            {% for room in data_room %}
                                                {% set selected_option = data_promotion_edit.id_quarto == room.id_quarto ? 'selected' : '' %}
                                                <option {{ selected_option }} value="{{ room.id_quarto }}">{{ room.nome }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label style="top: 5px">Preço</label><br style="margin-bottom: 3px">
                                        <input type="text" class="form-control mt-2 js-promotion-price" value="{{ data_promotion_edit.preco }}">
                                    </div>
                                </div>

                                {# Datas #}
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-6">
                                        <label>Data Inicial</label>
                                        <input type="date" class="form-control mt-2 js-promotion-initial-date" value="{{ data_promotion_edit.data_inicial }}">
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Data Final</label>
                                        <input type="date" class="form-control mt-2 js-promotion-final-date" value="{{ data_promotion_edit.data_final }}">
                                    </div>
                                </div>
                            </div>

                            {# Botao Salvar #}
                            <div class="card-footer">
                                <div class="col-md-12 text-right">
                                    <button type="submit" class="btn btn-primary pull-right js-promotion-btn-edit" data-id="{{ data_promotion_edit.id_promocao }}">Salvar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer_scripts %}
        <script type="text/javascript" src="{{ general.full_assets_url }}js/admin/promotion.js"></script>
    {% endblock %}