
    {% extends "base-document.twig" %}
    {% block content %}
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-md-2 col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h5 class="card-title">Configurações</h5>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="{{general.full_web_url}}configuracoes/"><button type="button" class="btn btn-info">Voltar</button></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body js-form-data-real-container">

                                {# Endereços #}
                                <h3>Endereços</h3>
                                <hr>

                                <div class="form-row mt-3">

                                    {# Bairro #}
                                    <div class="col-md-4">
                                        <div class="form-group bmd-form-group">
                                            <label>Barrio</label>
                                            <input type="text" class="form-control js-configuracao-barrio">
                                        </div>
                                    </div>

                                    {# Estado Descrição #}
                                    <div class="col-md-4">
                                        <div class="form-group bmd-form-group">
                                            <label>Estado Descrição</label>
                                            <input type="text" class="form-control js-configuracao-estado">
                                        </div>
                                    </div>

                                    {# País #}
                                    <div class="col-md-4">
                                        <div class="form-group bmd-form-group">
                                            <label>País</label>
                                            <input type="text" class="form-control js-configuracao-pais" value="Brasil" readonly>
                                        </div>
                                    </div>
                                </div>

                                {# Telefones #}
                                <h3>Telefones</h3>
                                <hr>

                                <div class="form-row mt-3">
                                    <div class="col-md-12 js-real-container-to-add-phones">

                                        {# Recipiente real #}
                                        <div class="row js-div-new-row">

                                            {# Telefone #}
                                            <div class="offset-md-1 col-md-4">
                                                <div class="form-group bmd-form-group">
                                                    <label>Telefone</label>
                                                    <input type="text" class="form-control js-configuracao-telefone">
                                                </div>
                                            </div>

                                            {# Tipo #}
                                            <div class="col-md-4">
                                                <div class="form-group bmd-form-group">
                                                    <label>Tipo</label>
                                                    <input type="text" class="form-control js-configuracao-tipo">
                                                </div>
                                            </div>

                                            {# Deletar Telefone #}
                                            <div class="col-md-2">
                                                <button class="btn btn-danger btn-fab btn-fab-mini btn-round js-btn-configuration-phone-delete">
                                                    <i class="material-icons">delete</i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    {# Botão adicionar telefones #}
                                    <div class="col-md-12 text-center">
                                        <div class="update ml-auto mr-auto">
                                            <button class="btn btn-success btn-fab btn-fab-mini js-btn-configuracao-add-telefones">
                                                <i class="material-icons">add</i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                {# Botao de salvar #}
                                <button type="submit" class="btn btn-primary pull-right js-btn-configuracao-salvar">Salvar</button>
                            </div>

                            {# ** Recipiente Oculto (HTML) ** #}
                            <div class="css-element-hide js-hide-container-to-add-phones">
                                <div class="row js-div-new-row">

                                    {# Telefone #}
                                    <div class="offset-md-1 col-md-4">
                                        <div class="form-group bmd-form-group">
                                            <label>Telefone</label>
                                            <input type="text" class="form-control js-configuracao-telefone">
                                        </div>
                                    </div>

                                    {# Tipo #}
                                    <div class="col-md-4">
                                        <div class="form-group bmd-form-group">
                                            <label>Tipo</label>
                                            <input type="text" class="form-control js-configuracao-tipo">
                                        </div>
                                    </div>

                                    {# Deletar Telefone #}
                                    <div class="col-md-2">
                                        <button class="btn btn-danger btn-fab btn-fab-mini btn-round js-btn-configuration-phone-delete">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer_scripts %}
        <script type="text/javascript" src="{{ general.full_assets_url }}js/admin/configurations.js"></script>
    {% endblock %}