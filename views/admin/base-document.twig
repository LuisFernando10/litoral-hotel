
    <!DOCTYPE html>
    <html>
        {% block head %}

            <head>

                {# Title #}
                <title>Hotel Litoral</title>

                {# Metadata #}
                <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
                <meta http-equiv="X-UA-Compatible" content="IE=edge">
                <meta name="description" content="tnotifico">
                <meta name="viewport" content="width=device-width, initial-scale=1">
                <meta http-equiv="Expires" content="0">
                <meta http-equiv="Last-Modified" content="0">
                <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
                <meta http-equiv="Pragma" content="no-cache">

                {# Fuentes e íconos #}
                <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
                <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>

                {# Bootstrap Fileinput #}
                <link href="{{ general.full_assets_url }}template/plugins/bootstrap-fileinput/css/fileinput.css" rel="stylesheet">
                <link href="{{ general.full_assets_url }}template/plugins/bootstrap-fileinput/css/fileinput-rtl.css" rel="stylesheet">

                {# Bootstrap-Select #}
                <link rel="stylesheet" type="text/css" href="{{ general.full_assets_url }}template/plugins/bootstrap-select/css/bootstrap-select.min.css">

                {# CSS Files #}
                <link href="{{ general.full_assets_url }}template/material-dashboard/css/material-dashboard.css" rel="stylesheet">
                <link href="{{ general.full_assets_url }}template/material-dashboard/css/material-dashboard-rtl.css" rel="stylesheet">

                {# Main CSS #}
                <link href="{{ general.full_assets_url }}css/main.css" rel="stylesheet">
                <link href="{{ general.full_assets_url }}css/admin/main.css" rel="stylesheet">
            </head>

        {% endblock %}

        <body>
            <div class="wrapper">

                {# Slide-bar #}
                {% include 'side-bar.twig' %}

                <div class="main-panel">

                    {# Navbar #}
                    {% include 'nav-bar.twig' %}

                    {% block content %}
                        {#Código HTML  para cada vista#}
                    {% endblock %}

                    {# Footer #}
                    {% include 'footer.twig' %}

                </div>
            </div>
        </body>

        {# Scripts generales #}
        {{ include('footer-scripts.twig') }}

        {% block footer_scripts %}
            {# Scripts propios de cada documento #}
        {% endblock %}
    </html>